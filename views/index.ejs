<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>My Blog</h1>
            <p>Share your thoughts and ideas</p>
        </header>

        <!-- Create Post Form -->
        <section class="create-post">
            <h2>Create New Post</h2>
            <form action="/posts" method="POST" class="post-form">
                <div class="form-group">
                    <label for="title">Post Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                
                <div class="form-group">
                    <label for="author">Author Name:</label>
                    <input type="text" id="author" name="author" required>
                </div>
                
                <div class="form-group">
                    <label for="content">Post Content:</label>
                    <textarea id="content" name="content" rows="6" required></textarea>
                </div>
                
                <button type="submit" class="btn btn-primary">Create Post</button>
            </form>
        </section>

        <!-- Posts List -->
        <section class="posts">
            <h2>All Posts</h2>
            <% if (posts.length === 0) { %>
                <div class="no-posts">
                    <p>No posts yet. Create your first post above!</p>
                </div>
            <% } else { %>
                <% for (var i = 0; i < posts.length; i++) { %>
                    <% var currentPost = posts[i]; %>
                    <article class="post">
                        <div class="post-header">
                            <h3><%= currentPost.title %></h3>
                            <div class="post-meta">
                                <span class="author">By <%= currentPost.author %></span>
                                <span class="date">Created: <%= currentPost.createdAt %></span>
                                <% if (currentPost.updatedAt) { %>
                                    <span class="date">Updated: <%= currentPost.updatedAt %></span>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="post-content">
                            <p><%= currentPost.content %></p>
                        </div>
                        
                        <div class="post-actions">
                            <a href="/posts/<%= currentPost.id %>/edit" class="btn btn-secondary">Edit</a>
                            <form action="/posts/<%= currentPost.id %>/delete" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            <% } %>
        </section>
    </div>
</body>
</html>
